<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="91dp"
        android:layout_height="127dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder1" />

    <TextView
        android:id="@+id/tvdisplayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Silvia"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tvhandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="silvagirl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toEndOf="@+id/tvdisplayname"
        app:layout_constraintTop_toTopOf="@+id/tvdisplayname" />

    <TextView
        android:id="@+id/tvtweet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tvdisplayname"
        tools:text="Little Mermaid /home/student/Downloads/twitter/placeholder1.jpe bbbbbbbbbbbbg" />

    <ImageView
        android:id="@+id/ivcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/tvtweet"
        app:layout_constraintTop_toBottomOf="@+id/tvtweet"
        app:srcCompat="@drawable/baseline_comment_24" />

    <TextView
        android:id="@+id/tvreplycount"
        android:layout_width="21dp"
        android:layout_height="17dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/ivcomment"
        app:layout_constraintStart_toEndOf="@+id/ivcomment"
        app:layout_constraintTop_toTopOf="@+id/ivcomment" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/tvreplycount"
        app:layout_constraintTop_toTopOf="@+id/tvreplycount"
        app:srcCompat="@drawable/baseline_autorenew_24" />

    <TextView
        android:id="@+id/tvretweet"
        android:layout_width="22dp"
        android:layout_height="18dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/tvlikecount"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/ivlike"
        app:layout_constraintStart_toEndOf="@+id/ivlike"
        app:layout_constraintTop_toTopOf="@+id/ivlike"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/tvretweet"
        app:layout_constraintTop_toTopOf="@+id/tvretweet"
        app:srcCompat="@drawable/baseline_favorite_24" />
</androidx.constraintlayout.widget.ConstraintLayout>